@model List<OtelMvcProje.Models.Entity.TblBlog>
<section class="w3l-feature-2">
    <div class="grid top-bottom py-5">
        <div class="container py-md-5">
            <h3 class="title-big text-center">Odalarımız estetikle dizayn edildi.</h3>
            <div class="middle-section row mt-lg-5 pt-md-3">
                @foreach (var item in Model)
                {
                    <div class="three-grids-columns col-lg-4 col-md-6 mt-md-0 mt-4">
                        <img src="@item.Image" alt="" class="img-fluid">
                        <div class="info">
                            <h4> <a href="#url"> @item.Baslik </a></h4>
                            <p>
                                @item.Aciklama
                            </p>
                            <a href="/Rezervasyon/Index" class="btn mt-4">Rezervasyon Yap </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
